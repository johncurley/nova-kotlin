{
    "identifier": "ScanFlow.novakotlin",
    "name": "Kotlin",
    "organization": "John Curley",
    "description": "Kotlin syntax highlighting and language server support for Nova.",
    "version": "1.0.0",
    "license": "MIT",
    "homepage": "https://github.com/johncurley/nova-kotlin",
    "repository": "https://github.com/johncurley/nova-kotlin",
    "bugs": "https://github.com/johncurley/nova-kotlin/issues",
    "main": "main.js",
    "categories": ["languages"],
    "activationEvents": [
        "onLanguage:kotlin"
    ],
    "languages": [
        {
            "id": "kotlin",
            "name": "Kotlin",
            "extensions": ["kt", "kts"]
        }
    ],
    "grammars": [
        {
            "language": "kotlin",
            "path": "Syntaxes/kotlin.tmLanguage.json"
        }
    ],
    "entitlements": [
        "process",
        "filesystem"
    ],
    "config": [
        {
            "key": "kotlin.languageServerPath",
            "title": "Kotlin Language Server Path",
            "type": "path",
            "default": "kotlin-language-server",
            "description": "Path to the kotlin-language-server executable. Defaults to 'kotlin-language-server' (requires installation via Homebrew or manual setup)."
        }
    ]
}
